---
const { title = "MMA Rankings" } = Astro.props;
import Nav from "../components/Nav.astro";
interface Props {
  title?: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Explore MMA fighter rankings across all weight divisions"
    />
    <title>{title}</title>
  </head>
  <body>
    <Nav />
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/main.scss";
</style>
