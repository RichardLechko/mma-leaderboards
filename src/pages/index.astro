---
import Layout from "../layouts/Layout.astro";

const divisions = [
  "flyweight",
  "bantamweight",
  "featherweight",
  "lightweight",
  "welterweight",
  "middleweight",
  "light-heavyweight",
  "heavyweight",
];

const formatDivisionName = (division: string) => {
  return division
    .split("-")
    .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
    .join(" ");
};
---

<Layout>
  <main class="home-page">
    <header class="home-header">
      <h1>MMA Weight Divisions</h1>
      <p>
        Welcome to the MMA leaderboards. Explore the rankings of fighters across
        various weight classes. Click on a division to view its top-ranked
        fighters.
      </p>
    </header>

    <section class="divisions-grid">
      <h2>Weight Divisions</h2>
      <ul>
        {
          divisions.map((division) => (
            <li>
              <a href={`/division/${division}`}>
                {formatDivisionName(division)}
              </a>
            </li>
          ))
        }
      </ul>
    </section>

    <section class="info-section">
      <h2>What is MMA?</h2>
      <p>
        Mixed Martial Arts (MMA) is a full-contact combat sport combining
        striking and grappling techniques across various weight divisions.
      </p>

      <div class="info-subsection">
        <h3>Weight Divisions</h3>
        <p>
          Each division showcases unique fighting styles. Click any division
          above to explore rankings and top fighters.
        </p>
      </div>
    </section>
  </main>
</Layout>
